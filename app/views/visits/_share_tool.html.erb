<div id="share_tool" class="tool" style="display:none;">
  <div id="share_tool_close_wrapper" class="close_link_wrapper">
    <a href="#" id="share_tool_close" class="close_link"><%= t('muck.services.hide')%></a>
  </div>
  <div class="tools_container">
    <div id="shares_control">
      <h2><%= t('muck.shares.share_title') %></h2>
      <% if logged_in? -%>
        <% if already_shared_entry?(current_user, @entry) -%>
          <%= t('muck.services.already_shared') %>
        <% end -%>
        <%= output_errors(t('muck.shares.problem_adding_share'), {:class => 'help-box'}, @share) %>
        <% share_form(@share) do |f| -%>
          <%= f.hidden_field :entry_id -%>
          <%= hidden_field_tag :render_new, false -%>
        <% end -%>
      <% else -%>
        <%= link_to t('muck.shares.login_prompt'), login_path %>
      <% end -%>
    </div>
  </div>
</div>